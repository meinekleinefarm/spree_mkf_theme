<% content_for :page_title do %>
  <%= t(:editing_schaf) %> &ldquo;<%= @schaf.name %>&rdquo;
<% end %>

<% content_for :sidebar_title do %>
  <span class="sku"><%= @schaf.name %></span>
<% end %>

<% content_for :sidebar do %>
  <nav class="menu">
    <ul data-hook="admin_schafe_tabs">
      <li<%== ' class="active"' if current == 'schaf Details' %>>
        <%= link_to_with_icon 'icon-edit', t(:schaf_details), edit_admin_schaf_url(@schaf) %>
      </li>
      <li<%== ' class="active"' if current == 'Images' %>>
        <%= link_to_with_icon 'icon-picture', t(:images), admin_schaf_images_url(@schaf) %>
      </li>
    </ul>
  </nav>

<% end %>
