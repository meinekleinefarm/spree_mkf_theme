%li.columns.four.row{:id => dom_id(schwein), :class => cycle('alpha', '', 'omega')}
  .schwein
    .product-image
      -if schwein.try(:permalink).blank?
        = small_image(schwein, :width => '100%')
        %h4= schwein.name
      - else
        = link_to(small_image(schwein, :width => '100%'), schwein_path(schwein.permalink))
        %h4= link_to(schwein.name, schwein_path(schwein.permalink))
    %span.props
      = number_to_human(schwein.weight, :units => {:unit => "kg", :thousand => "t"}, :significant => true, :precision => 5)
    %span.props.last
      = ("&dagger;" + l(schwein.date_of_death, :format => :default)).html_safe rescue nil
