<%
  paginated_products = @searcher.retrieve_products if params.key?(:keywords)
  paginated_products ||= products
%>
<% if products.empty? %>
  <%= t(:no_products_found) %>
<% elsif params.key?(:keywords) %>
  <h6 class="search-results-title"><%= t(:search_results, :keywords => h(params[:keywords])) %></h6>
<% end %>

<% if products.any? %>
<ul id="products" class="inline product-listing" data-hook>
  <% products.each do |product| %>
    <% if product.on_display? %>
      <li id="product_<%= product.id %>" class="columns four <%= cycle("alpha", "secondary", "omega secondary", :name => "classes") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
        <div class="product-image">
          <%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url' %>
        </div>
        <%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %>
        <ul id="item-properties">
          <li>1 Glas</li>
          <li itemprop="weight"><%= number_with_precision(product.weight, :precision => 0) %>g</li>
          <li class="last" itemprop="price"><%= product.price_in(current_currency).display_price %></li>
        </ul>
        <div class="clear"/>
        <p class="description">
          <%= truncate(product.description, :length => 160) %>
        </p>

        <div id="cart-form" data-hook="cart_form">
          <%= render :partial => 'spree/products/index_cart_form', :locals => {:product => product} %>
        </div>
      </li>
    <% end %>
  <% end %>
  <% reset_cycle("classes") %>
</ul>
<% end %>

<% if paginated_products.respond_to?(:num_pages) %>
  <%= paginate paginated_products %>
<% end %>
